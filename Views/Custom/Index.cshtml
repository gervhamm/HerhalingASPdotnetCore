@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer ViewLocalizer
@{
    Layout = "_CustomLayout";
}
@model HerhalingASPdotnetCore.Models.User

<div class="text-center">
    <h1>@ViewLocalizer["Culture"]: @CultureInfo.CurrentCulture.NativeName </h1>
    <p>@Model.Name</p>
    <p>@Model.Email</p>
    <p>@Model.Message</p>
</div>